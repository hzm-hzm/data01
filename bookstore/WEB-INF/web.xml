    <servlet-name>orders</servlet-name>
    <url-pattern>/OrdersServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Adminorders</servlet-name>
    <servlet-class>xin.hlao.bookstore.orders.admin.web.servlet.AdminOrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Adminorders</servlet-name>
    <url-pattern>/Admin/AdminOrdersServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>xin.hlao.bookstore.admin.web.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/AdminServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AdminLoginFilter</filter-name>
    <filter-class>xin.hlao.bookstore.filter.AdminLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminLoginFilter</filter-name>
    <url-pattern>/adminjsps/admin/*</url-pattern>
  </filter-mapping>
</web-app>