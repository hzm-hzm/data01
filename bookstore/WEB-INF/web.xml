<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>category</servlet-name>
    <servlet-class>xin.hlao.bookstore.category.web.servlet.CategoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>category</servlet-name>
    <url-pattern>/CategoryServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>admincategory</servlet-name>
    <servlet-class>xin.hlao.bookstore.category.admin.web.servlet.AdminCategoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>admincategory</servlet-name>
    <url-pattern>/Admin/AdminCategoryServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>xin.hlao.bookstore.user.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>book</servlet-name>
    <servlet-class>xin.hlao.bookstore.book.web.servlet.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>book</servlet-name>
    <url-pattern>/BookServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>adminbook</servlet-name>
    <servlet-class>xin.hlao.bookstore.book.admin.web.servlet.AdminBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminbook</servlet-name>
    <url-pattern>/Admin/AdminBookServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>adminaddbook</servlet-name>
    <servlet-class>xin.hlao.bookstore.book.admin.web.servlet.AdminAddBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminaddbook</servlet-name>
    <url-pattern>/Admin/AdminAddBookServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>xin.hlao.bookstore.cart.web.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/CartServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>orders</servlet-name>
    <servlet-class>xin.hlao.bookstore.orders.web.servlet.OrdersServlet</servlet-class>
